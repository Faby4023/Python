        "class Cadastro:\n",
        "  def __init__(self, nome, idade, genero, cpf, numero):\n",
        "      self.nome = nome\n",
        "      self.idade = idade\n",
        "      self.genero = genero\n",
        "      self.cpf = cpf\n",
        "      self.numero = numero\n",
